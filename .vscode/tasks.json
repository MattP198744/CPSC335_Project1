{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build and run C++",
      "type": "shell",
      "command": "C:\\mingw64\\bin\\g++.exe",
      "args": [
        "-Wall",
        "-Wextra",
        "-g",
        "${file}",
        "-o",
        "${fileDirname}\\${fileBasenameNoExtension}.exe"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    }
  ]
}
